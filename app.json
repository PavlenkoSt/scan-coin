{
  "expo": {
    "name": "scan-coin",
    "slug": "scan-coin",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "cover",
      "backgroundColor": "#0b1220"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stanislav-pav.scancoin",
      "appleTeamId": "B3N5KL2852"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0b1220"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.stanislav_pav.scancoin"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow access to your photos to import coin images.",
          "cameraPermission": "Allow camera access to scan coins."
        }
      ],
      "expo-font"
    ]
  }
}
